
.content{
	background: #fff;
}
.info-box{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	margin: 50rpx 30rpx;
}
.info-box .avatar-box{
	margin-right: 40rpx;
}
.info-box .avatar-box .avatar{
	width: 80rpx;
	height: 80rpx;
	border: 2px solid #f2f2f2;
	border-radius: 80rpx;
	box-shadow: 0 0 5rpx;
}
.info-box .info{
	font-size: 26rpx;
}
.info-box .info .name{
	font-size: 36rpx;
	font-weight: bold;
}
.lists{
	box-shadow: 0 0 4px #a3a3a3;
	border-radius: 8rpx;
	margin: 0 30rpx;
}
.lists .list{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 28rpx 0;
	margin: 0 36rpx;
	border-bottom: 1px solid #f3f3f3;
	position: relative;
}
.lists .list:last-child{
	border-bottom: 0;
}
.lists .list .share{
	position: absolute;
	left: 1;
	top: 1;
	width: 100%;
	height: 100%;
	z-index: 2;
	opacity: 0;
}
.lists .list .list-title{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	font-weight: bold;
	color: #666;
	font-size: 28rpx;
	padding: 0 20rpx;
}
.lists .list .icon{
	width: 50rpx;
	height: 50rpx;
	margin: 0 10rpx;
}

